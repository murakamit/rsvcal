<h1>Items</h1>

<%- if Item.all.empty? -%>
(nothing)
<%- else -%>
  <%- Item.order(:name).each do | item | -%>
<dl>
  <dt><%= link_to item.name, item %> <%= link_to "properties", [:prop, item] %></dt>
    <%- if item.memo.present? -%>
  <dd><%= item.memo %></dd>
    <%- end -%>
</dl>
  <%- end -%>
<%- end -%>

<%- if @login_user.try :admin? -%>
<h2>Admin</h2>
<%= link_to "Create new item...", new_admin_item_path %>
<%- end -%>
