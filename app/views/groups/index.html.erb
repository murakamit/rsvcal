<h1>Groups</h1>

<%- if Group.all.empty? -%>
(nothing)
<%- else -%>
  <%- Group.order(:name).each do |g| -%>
<dl>
  <dt><%= g.name %> <%= link_to "properties", g %></dt>
    <%- if g.memo.present? -%>
  <dd><%= g.memo %></dd>
    <%- end -%>
    <%- if g.items.empty? -%>
  <dd>(no items)</dd>
    <%- else -%>
    <dl>
      <%- g.items.each do |i| -%>
      <dt><%= link_to i.name, i %></dt>
        <%- if i.memo.present? -%>
      <dd><%= i.memo %></dd>
        <%- end -%>
      <%- end -%>
    </dl>
    <%- end -%>
</dl>
  <%- end -%>
<%- end -%>

<%- if @login_user.try :admin? -%>
<h2>Admin</h2>
<%= link_to "Create new group...", new_admin_group_path %>
<%- end -%>
