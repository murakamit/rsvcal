<h1><%= @page_title %></h1>

<h2>Properties</h2>
<dl>
  <dt>ID</dt>
  <dd><%= @group.id %></dd>

  <dt>name</dt>
  <dd><%= @group.name %></dd>

  <dt>memo</dt>
  <dd><%= @group.memo.presence || "(N/A)" %></dd>

  <dt>created at</dt>
  <dd><%= @group.created_at %></dd>

  <dt>updated at</dt>
  <dd><%= @group.updated_at %></dd>
</dl>

<%= render "shared/admin_edit_delete", obj: @group, delmes: "Are you sure you want to delete '#{@group.name}'" %>
