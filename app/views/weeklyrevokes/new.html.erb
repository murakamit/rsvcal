<h1><%= @page_title %></h1>

<%= form_for @revoke do |f| %>
<dl>
  <%# --- --- --- --- --- --- --- --- --- --- -%>
  <dt>
    <label class="required">weekly reservation ID</label>
<%= render "shared/attach_errors", key: :weekly_id -%>
  </dt>
  <dd>
    <%= select_revoke_tag f, :weekly_id, @revoke.weekly_id %>
  </dd>
  <%# --- --- --- --- --- --- --- --- --- --- -%>
  <dt>
    <label class="required">applicant name</label>
<%= render "shared/attach_errors", key: :applicant -%>
  </dt>
  <dd>
    <%= f.text_field :applicant, maxlength: 50 %>
  </dd>
  <%# --- --- --- --- --- --- --- --- --- --- -%>
  <dt>
    <label class="required">date</label>
<%= render "shared/attach_errors", key: :date -%>
  </dt>
  <dd>
    <%= f.text_field :date, maxlength: 10, class: "datepicker" %>
  </dd>
  <%# --- --- --- --- --- --- --- --- --- --- -%>
  <dt>
    <label>memo</label>
<%= render "shared/attach_errors", key: :memo -%>
  </dt>
  <dd>
    <%= f.text_area :memo, maxlength: 50, style: "width:20em;height:4em;" %>
  </dd>
</dl>
<div>
  <%= submit_tag 'Revoke!' %>
</div>
<% end %>

<p class="desc-required"><label class="required"></label> is required.</p>
